<Page x:Class="BikeRentalClientWithPage.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeRentalClientWithPage"
      mc:Ignorable="d" 
      d:Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Margin="2.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />            
        </Grid.RowDefinitions>
        <Label Content="Kerékpárok" HorizontalContentAlignment="Center" Margin="2.5" />
        <ListBox Grid.Row="1"  x:Name="LB_Bikes" HorizontalContentAlignment="Center" Margin="2.5" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Hozzáadás" x:Name="BTN_NewBike" Margin="2.5" />
            <Button Grid.Column="1" Content="Módosítás" x:Name="BTN_EditBike" Margin="2.5" />
            <Button Grid.Column="2" Content="Törlés" x:Name="BTN_DeleteBike" Margin="2.5" />
        </Grid>
    </Grid>
</Page>
